{
    "manifest_version": 3,
    "name": "AccessAI",
    "version": "1.0",
    "description": "A simple Chrome extension to demonstrate basic concepts.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.jpg"    
    },
    "permissions": [
      "storage",               
      "activeTab"                
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],  
        "js": ["content.js"]       
      }
    ],
    "icons": {
      "16": "icon.jpg",           
      "48": "icon.jpg",               
      "128": "icon.jpg"              
    }
  }